abstract module declix.apt

import ".../base/Resource.pkl"
import ".../dpkg/dpkg.pkl"

class Package extends Resource.Resource {
    fixed type = "apt"
    fixed id = type + ":" + name

    name: String
    state: dpkg.State
    updateBeforeInstall: Boolean = false

}

function install(names: Listing<String>): Listing<Resource.Resource> = new Listing {
    for (pkg in names) {
        new Package {
            name = pkg
            state = "installed"
        }
    }
}

function remove(names: Listing<String>): Listing<Resource.Resource> = new Listing {
    for (pkg in names) {
        new Package {
            name = pkg
            state = "missing"
        }
    }
}
